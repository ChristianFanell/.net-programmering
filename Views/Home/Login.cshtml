@{
    Layout = "_CitizenLayout";
    ViewBag.Title = "Småstads kommun";
    @model LoginModel
}

<section id="mainColumn">
    <h2>Inloggning för Småstads personal</h2>
    <p class="info">En säker tjänst från Småstads IT-avdelning</p>

    <form method="post" asp-controller="Home" asp-action="Login">
        <p>
            <input type="hidden" name="isSubmitted" value="true" />
        </p>
        <p>
            @*<span class="label">Användarnamn:</span><br />
            <input type="text" name="user" />*@
            <label asp-for="UserName"></label>
            <input asp-for="UserName" />
            <span asp-validation-for="UserName"></span>
        </p>
        <p>
            @*<span class="label">Lösenord:</span><br />
        <input type="password" name="password" />*@
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </p>
        <p>
            <input type="hidden" asp-for="ReturnUrl" />
        </p>
        <p>
            <input class="button" type="submit" value="Logga in" />
            <br />
            <!--Dessa länkar ska sedan tas bort då det är meningen att vid kontrollen av inloggningsuppgifter så hämtas rätt sida-->
            @*<a class="button" asp-controller="Home" asp-action="Login">Inloggning av chefer</a><br />
            <a class="button" asp-controller="Home" asp-action="Login">Inloggning av handläggare</a>*@
        </p>
        <div asp-validation-summary="All"></div>
    </form>
</section><!-- End Left -->